# Reddit API credentials
REDDIT_CLIENT_ID=your_client_id
REDDIT_CLIENT_SECRET=your_client_secret
# Keep user agent short and without quotes
REDDIT_USER_AGENT=pulse-ingestion/1.0 by <yourname>

# Sink selection: use Redis Streams in production
SINK=redis

# Redis connection (data-plane VM)
REDIS_HOST=10.0.0.37
REDIS_PORT=6379
REDIS_DB=0
RAW_POSTS_STREAM=raw_posts
RAW_POSTS_MAXLEN=100000

# De-duplication TTL in seconds (how long to remember seen Reddit IDs)
REDDIT_SEEN_TTL_SECONDS=86400

# Subreddits and pacing
# Use '+' to join multiple subreddits
SUBREDDITS=technology+wallstreetbets+worldnews+politics+gaming+movies
# Throttle rate (messages/sec)
RPS=4
# Backfill the last N minutes before streaming new content
BACKFILL_MINUTES=60
